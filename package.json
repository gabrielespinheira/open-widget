{
  "name": "@openchatai/widget",
  "private": false,
  "version": "1.1.9",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf ./dist ./dist-embed",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepublishOnly": "pnpm clean && pnpm batman",
    "dev": "vite build --watch",
    "build": "vite build",
    "start:dev": "vite",
    "build:embed": "vite build -c vite.embed.config.ts",
    "test": "vitest run",
    "batman": "pnpm build && pnpm build:embed"
  },
  "peerDependencies": {
    "lucide-react": "^0.412.0",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "axios": "^1.7.2",
    "class-variance-authority": "^0.7.0",
    "eslint": "^8.56.0",
    "tailwindcss": "^3.4.6",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "postcss": "^8.4.39",
    "postcss-prefix-selector": "^1.16.1",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "socket.io-client": "^4.7.5",
    "swr": "^2.2.5",
    "tailwind-merge": "^2.4.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "vite-plugin-dts": "4.0.0-beta.1",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.3"
  },
  "files": [
    "dist",
    "dist-embed"
  ],
  "bugs": {
    "url": "https://github.com/openchatai/OpenCopilot/issues"
  },
  "author": {
    "name": "openchatai",
    "url": "https://github.com/openchatai"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs.js",
      "import": "./dist/index.es.js",
      "default": "./dist/index.es.js",
      "types": "./dist/lib/index.d.ts"
    },
    "./dist/*.css": "./dist/*.css"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "framer-motion": "^11.3.8",
    "clsx": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "immer": "^10.1.1",
    "lucide-react": "^0.412.0"
  }
}